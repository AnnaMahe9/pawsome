<div class="container">

  <div class="cards-grid-list mt-5 mb-5">

    <% @pets.each do |pet| %>
      <div id="cards-list" class="card">
        <div>
        <%= cl_image_tag pet.photo.key, id:"img-pet-list"%>
        </div>

          <div class="card-body">
            <div class="card-text d-flex justify-content-between">
              <h3 class="card-title"><%= link_to pet.name, pet_path(pet)%></h3>
              <div class="card-text d-flex justify-content-between">
              <%= cl_image_tag pet.owner.photo.key, id:"img-user-list"%>
              </div>
            </div>

            <div class="card-subtitle mb-2 text-muted">
            <%= pet.species %>
            </div>
            <div class="card-text d-flex justify-content-between">
            <%= pet.age %> an(s)
            <div class="d-flex flex-row-reverse"><%= pet.price_per_day %> â‚¬/jour </div>
            </div>

        </div>
      </div>
    <% end %>

  </div>

</div>
